<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:contxt=".BlankFragment2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <EditText
                android:id="@+id/num"
                android:layout_width="600px"
                android:layout_height="300px"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:background="@drawable/boreder_white"
                android:gravity="center"
                android:hint="@string/num_is"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#675F5F"
                android:textColorHint="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints">
            </EditText>
            <EditText
                android:id="@+id/step"
                android:layout_width="600px"
                android:layout_height="300px"
                android:layout_gravity="left"
                android:background="@drawable/boreder_white"
                android:gravity="center"
                android:hint="@string/num_st"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#F3F3F3"
                android:textColorHint="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/act"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:id="@+id/info"
                    android:layout_width="118dp"
                    android:layout_height="56dp"
                    android:background="#CFBBFE"
                    android:text=""
                    app:icon="@drawable/calc"
                    android:contentDescription="Frag2"
                    app:iconSize="60dp" />
                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="118dp"
                    android:layout_height="48dp"
                    android:background="@drawable/border"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Del" />
            </LinearLayout>
            <TextView
                android:id="@+id/res"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:background="@drawable/boreder_white"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </LinearLayout>